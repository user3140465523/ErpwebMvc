
@{
    ViewData["Title"] = "lists";
}

<h1>lists</h1>
<head>
    
</head>
<table >
    <thead>
        <tr>
            <td>商品id</td>
            <td>商品名称</td>
            <td>商品生产日期</td>
            <td>商品保质期</td>
            <td>商家联系电话</td>
            <td>库存量</td>
        </tr>
    </thead>
  
</table>
<script>
    $.ajax({
        url: "https://localhost:44370/api/Goods/Show",
        dataType: "json",
        type:"Get",
        success: function (data) {
           
            $("table tr:gt(0)").remove();
            $(data).each(function () {
                var tr = ' <tr>'
                    + '<td>' + this.Gid + '</td>'
                    + '<td>' + this.Gname + '</td>'
                    + '<td>' + this.Gscdata + '</td>'
                    + '<td>' + this.Gbz + '</td>'
                    + '<td>' + this.Gzxbz + '</td>'
                    + '<td>' + this.Gphone + '</td>'
                    + '<td>' + this.num + '</td>'
                    + '</tr >'
                $("table").append(tr);
            })
        }

    })

   
</script>