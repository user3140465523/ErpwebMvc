<script>
   
        layui.use(['form', 'layedit', 'laydate', 'element'], function () {
            var form = layui.form
            var layer = layui.layer
            var layedit = layui.layedit
            var laydate = layui.laydate;
            var element = layui.element;

            //添加
            form.on('submit(add)',
                function (data) {
                    //layer.msg(JSON.stringify(data.field));
                    //int和bool得转换格式
                    var obj = {};

                    obj.uname = $("#uname").val();

                    obj.upass = $("#upass").val();

                    obj.uphone = $("#uphone").val();

                    obj.uemail = $("#uemail").val();

                    obj.uage = parseInt($("#uage").val());

                    obj.usex = $("#sex").val() == "false" ? "true" : "false";

                    obj.salary = parseFloat($("#salary").val());

                    $.ajax({
                        url: "http://localhost:44370/api/Userinfo/Add",
                        dataType: "text",
                        type: "post",
                        data: obj,
                        success: function (data) {


                            if (data > 0) {
                                layer.alert('提交成功',
                                    {
                                        icon: 6,
                                        yes: function (index) {
                                            layer.close(index);
                                            location.reload();
                                        }
                                    });

                            } else {
                                layer.alert('提交失败', { icon: 5 });
                            }
                        }
                    });
                    return false;
                });
        });
  
      
</script>




