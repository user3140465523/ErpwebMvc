<script type="text/html" id="barDemo">

    <a class="layui-btn layui-btn-xs" lay-event="edit">编辑</a>

    <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>

</script>

<script>

    $(function () {
        //JavaScript代码区域
        layui.use(['table', 'form', 'jquery', 'element', 'layer'], function () {
            var table = layui.table;
            var form = layui.form;
            var element = layui.element;
            var layer = layui.layer;
            var laydate = layui.laydate;

            form.render('select');
            table.render({
                elem: '#idTest',
                url: 'http://localhost:44370/api/Userinfo/Show',
                cellMinWidth: 80 //全局定义常规单元格的最小宽度，layui 2.2.1 新增
                ,
                title: '用户信息',
                page: true //是否显示分页
                ,
                limit: 10 //每页默认显示的数量
                , limits: [10, 20, 30, 40, 50]
                , method: 'get'
                , cols: [
                    [
                        { field: 'uid', title: '员工id', align: 'center' },
                        { field: 'uname', title: '员工姓名', align: 'center' },
                        { field: 'upass', title: '员工密码', align: 'center' },
                        { field: 'uphone', title: '用户手机', align: 'center' },
                        { field: 'uemail', title: '用户邮箱', align: 'center' },
                        { field: 'uage', title: '用户年龄', align: 'center' },
                        { field: 'usex', title: '用户性别', align: 'center' },

                        { field: 'salary', title: '用户工资', align: 'center' },
                        { fixed: 'right', title: '操作', width: 250, align: 'center', toolbar: '#barDemo' }

                    ]
                ],
                id: 'idTest'

            });



            $("#searchBtn").on('click', function () {

                var name = $("#name");

                //执行重载
                table.reload('idTest', {
                    page: {
                        curr: 1 //重新从第 1 页开始
                    }
                    , where: {
                        name: name.val(),
                        cId: parseInt(cId.val())

                    }
                });
            });
            

           table.on('tool(demo)',
            function (obj) {
                var data = obj.data;
                if (obj.event === 'detail') {
                    layer.msg('ID：' + data.Uid + ' 的查看操作');
                } else if (obj.event === 'del') {
                    layer.confirm('真的删除行么',
                    function (index) {
                        layer.close(index);
                        //layer.alert('编辑行：<br>' + JSON.stringify(data));

                        uid = data.uid;
                        $.ajax({
                            url: "http://localhost:44370/api/Userinfo/Del",
                            dataType: "json",
                            type: "post",
                            data: '' + uid + '',
                            contentType: "application/json",
                            success: function (data) {
                                if (data > 0) {
                                    layer.alert('已删除',
                                    {
                                        icon: 6,
                                        yes: function (index) {
                                            layer.close(index);
                                            obj.del();
                                        }
                                    });

                                }
                                else {
                                    layer.msg("删除失败", { icon: 5 });
                                }

                            }

                        });
                    });
                } else if (obj.event === 'edit') {
                    //layer.alert('编辑行：<br>' + JSON.stringify(data));
                    //页面层

                    layer.open({
                        maxmin: true,
                        type: 1,
                        title: "修改",
                        area: ['500px', '500px'], //宽高
                        content: $("#editdiv"),
                    });
                    //重新渲染下拉
                    //form.render('select');
                    //反填
                    form.val('example',
                    {
                        "uid": data.uid,
                        "uname": data.uname,
                        "uphone": data.uphone,
                        "uemail": data.uemail,// "name": "value"
                        "uage": data.uage,
                        "salary": data.salary,

                    });
                }
            });
            from.on('submit(edit)', function (data) {
                //layer.msg(JSON.stringify(data.field));
                //int和bool得转换格式
                var obj = {};
                obj.uid = $("#uid").val();
                obj.uname = $("#uname").val();
                obj.uphone = $("#uphone").val();
                obj.uemail = date.field.uemail;
                obj.uage = $("#uage").val();
                obj.usex = $("#nan").val() == "false" ? false : true;
                obj.salary = $("#salary").val();
                $.ajax({
                    url: "http://localhost:44370/api/Userinfo/Upt",
                    dataType: "json",
                    type: "text",
                    contentType: "application/json",
                    data: JSON.stringify(obj),
                    success: function (data) {
                        if (data > 0) {
                            layer.alert('修改成功',
                                {
                                    icon: 6,
                                    yes: function (index) {
                                        layer.close(index);
                                        location.reload();
                                    }
                                });

                        } else {
                            layer.alert('修改失败', { icon: 5 });
                        }

                    }

                });
                return false;
            });
        });

    });
    

</script>