<script>

    layui.use(['form', 'layedit', 'laydate', 'element'], function () {
        var form = layui.form
        var layer = layui.layer
        var layedit = layui.layedit
        var laydate = layui.laydate;
        var element = layui.element;

        //添加
        form.on('submit(upt)',
            function (data) {
                //layer.msg(JSON.stringify(data.field));
                //int和bool得转换格式
                var obj = {};
                obj.Gname = $("#roleName").val();
                obj.Gscdata = $("#addMoneys").val();

                obj.Gbz = $("#bh").val();
                obj.Gzxbz = $("#bh").val();

                obj.Gphone = $("#phone").val();
                obj.Gnum = $("#num").val();
                $.ajax({
                    url: "http://localhost:44370/api/Goods/Add",
                    dataType: "json",
                    type: "post",
                    data: JSON.stringify(obj),
                    contentType: "application/json",
                    success: function (data) {

                        if (data > 0) {
                            layer.alert('提交成功',
                                {
                                    icon: 6,
                                    yes: function (index) {
                                        layer.close(index);
                                        location.reload();
                                    }
                                });

                        } else {
                            layer.alert('提交失败', { icon: 5 });
                        }
                    }
                });
                return false;
            });
    });
</script>


