<script>
    $(function () {
        Show();
    });
    function Show() {
        $.ajax({
            url: "http://localhost:44370/api/Sell/GetStatiss",
            type: "Get",
            dataType: "json",
            success: function (result) {
                ShowList(result);

                var xx = [];
                var yy = [];
                $(result).each(function () {
                    xx.push(this.sdate);
                    yy.push(this.stsum);

                })
                Bandle(xx, yy);
            }
        });
    }

    function ShowList(result) {
        $("#tb").empty();
        $.each(result,function (i,n) {
        
            var list = '<tr style="text-align:center">'
                + '<td>' + n.stid + '</td>'
                + '<td>' + n.sdate + '</td>'
                + '<td>' + n.stsum + '</td>'
                + '</tr>';
            $("#tb").append(list);
     
        });
    
    }

    function Bandle(xx, yy) {

        var dom = document.getElementById("service");
        var myChart = echarts.init(dom);
        option = null;
        option = {
            color: "lightgreen",
            tooltip: {
                trigger: 'axis',
                axisPointer: {            // 坐标轴指示器，坐标轴触发有效
                    type: 'shadow'        // 默认为直线，可选为：'line' | 'shadow'
                }
            },
            grid: {
                left: '3%',
                right: '4%',
                bottom: '3%',
                containLabel: true
            },
            xAxis: [
                {
                    type: 'category',
                    data: xx,//['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
                    axisTick: {
                        alignWithLabel: true
                    }
                }
            ],
            yAxis: [
                {
                    type: 'value'
                }
            ],
            series: [
                {
                    name: '直接访问',
                    type: 'bar',
                    barWidth: '60%',
                    data: yy,//[10, 52, 200, 334, 390, 330, 220]
                }
            ]
        };
        if (option && typeof option === "object") {
            myChart.setOption(option, true);
        }

    }


</script>